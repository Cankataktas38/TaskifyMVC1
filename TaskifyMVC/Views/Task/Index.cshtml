@model List<TaskifyMVC.Models.TaskViewModel>
@{
    ViewData["Title"] = "Görevler";
}
<h2>Taskify - Görev Listesi</h2>
@if (!(bool)ViewBag.IsAuthenticated)
{
    <p> Önce <a asp-controller = "Account" asp-action="Login">giriş</a>yapın.</p>
}
else
{
    <form asp-action="Create" method="post" class="mb-3">
        <input type ="text" name="Title" placeholder="Görev başlığı" required/>
        <input type="text" name="Description" placeholder="Açıklama"/>
        <button type="submit">Ekle</button>
    </form>

    <table>
        <thead>
            <tr>
                <th>Başlık</th>
                <th>Açıklama</th>
                <th>Tamamlandı</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>@(item.IsCompleted ? "Evet" : "Hayır")</td>
                    <td>
                        <form asp-action="Delete" method="post">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit">Sil</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <form asp-controller="Account" asp-action="Logout" method="post">
        <button type="submit">Çıkış Yap</button>
    </form>
}

